{
  "name": "vscode-abap-artifacts",
  "displayName": "ABAP Artifacts Helper",
  "description": "ABAP Artifacts Helper",
  "publisher": "larshp",
  "version": "0.0.9",
  "engines": {
    "vscode": "^1.80.0"
  },
  "keywords": [
    "SAP",
    "ABAP"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/abaplint/vscode-abap-artifacts"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:abap",
    "onLanguage:abap_cds"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "abap-artifacts.create.artifact",
        "title": "Create ABAP Artifact",
        "category": "abap-artifacts"
      }
    ],
    "views": {
      "abap-artifacts": [
        {
          "id": "abap-artifacts.artifacts",
          "name": "Artifacts"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "abap-artifacts",
          "title": "ABAP Artifact Tree",
          "icon": "standalone.svg"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "abap-artifacts.create.artifact",
          "group": "abap-artifacts@1"
        }
      ]
    }
  },
  "configuration": {
    "type": "object",
    "title": "abap-artifacts",
    "properties": {
      "abap-artifacts.defaultLanguage": {
        "scope": "window",
        "type": "string",
        "default": "en",
        "description": "AFF: Default language"
      },
      "abap-artifacts.clasNoDescriptions": {
        "scope": "window",
        "type": "boolean",
        "default": true,
        "description": "AFF CLAS: No descriptions"
      },
      "abap-artifacts.clasFixPointArithmetic": {
        "scope": "window",
        "type": "boolean",
        "default": true,
        "description": "AFF CLAS: fixPointArithmetic"
      }
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/vscode": "^1.80.0",
    "@types/webpack-env": "^1.18.2",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vscode/test-web": "^0.0.47",
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "eslint": "^8.51.0",
    "json-schema-faker": "^0.5.3",
    "mocha": "^10.2.0",
    "process": "^0.11.10",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "url": "^0.11.3",
    "vscode-uri": "^3.0.8",
    "webpack-cli": "^5.1.4",
    "webpack": "^5.89.0"
  }
}
